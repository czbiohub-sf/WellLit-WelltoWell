#:kivy 1.11.1
#:import FigureCanvasKivyAgg kivy.garden.matplotlib.backend_kivyagg
#:import plt matplotlib.pyplot
#:import os os

<ConfirmPopup>:
	size_hint: None,None
	height: 400
	width: 500
	title: 'Confirm exit'

<WellLitPopup>:
	size_hint: 0.3, 0.8
	font_size: 30
	height: 400
	width: 800

<MetaLabel>:
	text_size: self.size
	halign: 'left'
	padding_x: 5
	markup: True
	font_size: 20

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: root.load_path
            

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Load'
                on_release: root.load(filechooser.selection)

<Button>
	font_size: 30

<WelltoWellWidget>:
	BoxLayout:
		orientation: 'vertical'
		size_hint: 0.375, 1
		pos_hint: {'left': 1, 'top': 1}
        Button:
            text: 'Load Transfer Protocol'
            on_press: root.show_load()
            size_hint: 1, 0.2
        Button:
            text: 'Finish Transfer Protocol'
            on_press: root.finishTransfer()
            size_hint: 1, 0.2
        Button:
            text: 'Quit'
            on_press: root.quitConfirm()
            size_hint: 1, 0.2
        Label:
            text: ''
            size_hint: 1, 0.4
        Button:
            text: 'Next Plate'
            size_hint: 1, 0.3
            on_press: root.nextPlate(None)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2
            Button:
                text: 'Square'
                on_press: root.setSquareMarker()
            Button:
                text: "Circle"
                on_press: root.setCircleMarker()
        Label:
            text: ''
            size_hint: 1, 0.2
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.4
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Source Plate'
                    font_size: 30
                    font_name: 'Roboto-Bold'
                Label:
                    text: root.source_plate
                    font_size: 30
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Destination Plate'
                    font_size: 30
                    font_name: 'Roboto-Bold'
                Label:
                    text: root.dest_plate
                    font_size: 30
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Current Transfer'
                    font_size: 30
                    font_name: 'Roboto-Bold'
                Label:
                    text: root.current_tf_id
                    font_size: 30
        Label:
            text: ''
            size_hint: 1, 0.3
        Label:
            size_hint: 1, 0.3
            halign: 'center'
            valign: 'center'
            text: root.status
            text_size: sp(500), sp(800)
            font_size: 30
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Undo'
                size_hint: 1, 0.2
                on_press: root.undo()
            Button:
                text: 'Skip'
                size_hint: 1, 0.2
                on_press: root.skip()
            Button:
                text: 'Failed'
                size_hint: 1, 0.2
                on_press: root.failed()
        Button:
            text: 'Next'
            size_hint: 1, 0.8
            pos_hint: {'left': 1, 'bottom': 1}
            on_press: root.next()


    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 1
        pos_hint: {'right': 1}
        WellPlot:
            shape: 'circle'
            type: 'source'
            id: source_plate
            type: 'source_plate'
            size_hint: 1, 0.5
        WellPlot:
            shape: 'circle'
            type: 'dest'
            id: dest_plate
            type: 'dest_plate'
            size_hint: 1, 0.5